{
  "name": "credo",
  "displayName": "Credo",
  "description": "An extension to display credo remarks in vscode.",
  "author": "Adam Zapa≈õnik",
  "version": "0.1.0",
  "license": "MIT",
  "publisher": "adamzapasnik",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "workspaceContains:**/mix.exs",
    "workspaceContains:**/.credo.exs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Credo configuration",
      "properties": {
        "credo.enable": {
          "type": "boolean",
          "default": true,
          "description": "Control whether or not credo is enabled for Elixir files."
        },
        "credo.command": {
          "type": "string",
          "default": "mix credo",
          "description": "Credo command (don't specify format)",
          "minLength": 1
        },
        "credo.projectPath": {
          "scope": "resource",
          "type": "string",
          "description": "Project path",
          "default": ""
        },
        "credo.mixEnv": {
          "scope": "resource",
          "type": "string",
          "description": "Mix environment to use for compilation",
          "default": "test",
          "minLength": 1
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.11.10",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^7.1.2",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}
